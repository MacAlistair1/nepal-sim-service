<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="75dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:hint="*101#"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:onClick="back"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_min"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/linearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#db052273"
        android:layout_below="@+id/input"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn1"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="1"
                    android:onClick="one"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btn2"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="2"
                    android:onClick="two"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btn3"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="3"
                    android:onClick="three"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btn4"
                    android:background="#68000000"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:textColor="#ff07ff"
                    android:text="4"
                    android:onClick="four"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored" />

            </TableRow>

            <TableRow
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/btn5"
                    android:background="#68000000"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:textColor="#ff07ff"
                    android:text="5"
                    android:layout_marginLeft="2dp"
                    android:onClick="five"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btn6"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="6"
                    android:onClick="six"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btn7"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="7"
                    android:onClick="seven"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btn8"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="8"
                    android:onClick="eight"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

            </TableRow>
            <TableRow
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/btn9"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="9"
                    android:layout_marginLeft="5dp"
                    android:onClick="nine"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btn0"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="0"
                    android:onClick="zero"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

                <Button
                    android:id="@+id/btnStar"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="*"
                    android:onClick="star"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored" />

                <Button
                    android:id="@+id/btnhash"
                    android:background="#68000000"
                    android:textColor="#ff07ff"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:textSize="70dp"
                    android:text="#"
                    android:onClick="hash"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"  />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="90dp"
                    android:text="C"
                    android:onClick="clear"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:background="#94000000"
                    android:layout_marginBottom="10dp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|bottom"
                android:background="@color/testcolorblue"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/dial1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnCall1"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="Call"
                        android:onClick="call1"
                        android:src="@drawable/ic_call"
                        android:textStyle="bold"
                        style="@android:style/Widget.Holo.Light.ImageButton" />

                    <TextView
                        android:id="@+id/sim1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sim1"
                        android:textSize="50dp"
                        android:textColor="#fff"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dial2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnCall2"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="Call"
                        android:onClick="call2"
                        android:layout_marginLeft="80dp"
                        android:src="@drawable/ic_call"
                        android:textStyle="bold"
                        style="@android:style/Widget.Holo.Light.ImageButton" />

                    <TextView
                        android:id="@+id/sim2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sim2"
                        android:layout_marginLeft="70dp"
                        android:textSize="50dp"
                        android:textColor="#fff"/>

                </LinearLayout>

            </LinearLayout>



        </TableLayout>

    </LinearLayout>

</RelativeLayout>
