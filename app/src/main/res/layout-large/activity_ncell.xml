<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsim"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_gravity="center_vertical|center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>

                    <Button
                        android:id="@+id/balance"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:textSize="30dp"
                        android:text="ब्यालेन्स \nहेर्नुहोस्"
                        android:onClick="checkbal"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:id="@+id/data"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:onClick="remain"
                        android:text="Remain Vol./Sms" />

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:id="@+id/customer"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:text="Customer Care"
                        android:onClick="care" />
                </TableRow>

                <TableRow>

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/tunes"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="PRBT \nTunes"
                        android:onClick="tunes"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:id="@+id/number"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:onClick="number"
                        android:text="Your Number"
                        />

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:id="@+id/time"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:onClick="time"
                        android:text="Current Time"
                        />
                </TableRow>

                <TableRow>

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/recharge"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="रिचार्ड \nगर्नुहोस् "
                        android:onClick="charge"
                        android:textSize="30dp"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:id="@+id/sms"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:onClick="sms"
                        android:text="Sms \nPack"
                        />


                    <Button
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:id="@+id/pack"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:onClick="pack"
                        android:text="Data \nPack"/>
                </TableRow>

                <TableRow></TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/voice"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="Voice \nPack"
                        android:onClick="voice"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/loan"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="Ncell \nLoan"
                        android:onClick="loan"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/transfer"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="Transfer Balance"
                        android:onClick="transfer"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow></TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/my5"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="My\n5"
                        android:onClick="my5"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/love"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="Love \nDetector"
                        android:onClick="detect"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/app"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="Ncell\nApp"
                        android:onClick="app"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow></TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/rechargeOthers"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:text="Recharge\nOthers\nPhone"
                        android:onClick="Rothers"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </HorizontalScrollView>
</ScrollView>